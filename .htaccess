# Disable caching for HTML (force revalidation)
<FilesMatch "\.(html|htm)$">
  Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
  Header set Pragma "no-cache"
  Header set Expires "0"
</FilesMatch>

# Short TTL for CSS/JS while you deploy (1 hour)
<FilesMatch "\.(css|js)$">
  Header set Cache-Control "public, max-age=3600, must-revalidate"
</FilesMatch>

# Long TTL for images/fonts (safe to cache)
<FilesMatch "\.(png|jpg|jpeg|gif|svg|webp|ico|woff2?)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Even longer TTL for videos (safe to cache)
# Case-insensitive match and includes .ogv
<FilesMatch "(?i)\.(mp4|webm|ogv)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>